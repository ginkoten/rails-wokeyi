<% simple_form_for(@skill) do |f| %>
  <% f.error_notification %>
  <%f.input :title, placeholder:'Enter a title', input_html: { class:'new-input' } %>
  <% f.input :brief, placeholder:'Enter a brief', input_html: { class:'new-input' } %>
  <% f.input :price, placeholder: 'Enter a price', input_html: { class:'new-input' } %>
  <% f.input :location, placeholder: 'Enter your address', input_html: { class:'new-input' } %>
  <% f.input :skills_category, colletion: %w(Design Marketing Writing Video Music Programming&Tech Business Lifestlye), input_html: { class:'new-input' } %>
  <% f.submit  %>

<% end %>
